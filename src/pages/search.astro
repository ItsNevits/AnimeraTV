---
import MainLayout from "@/layouts/MainLayout.astro";
import AnimeCard from "@/components/AnimeCard.astro";
import { getAnimeProvider } from "@/lib/anime-api";
import seoConfig from "@/config/seo";

const zoro = getAnimeProvider("zoro");

// Get search query from URL
const url = new URL(Astro.request.url);
const query = url.searchParams.get("q") || "";
const currentPage = parseInt(url.searchParams.get("page") || "1");

let searchResults: any = { results: [], hasNextPage: false, currentPage: 1 };
let error = null;

// Only search if there's a query
if (query.trim()) {
  try {
    searchResults = await zoro.search(query, currentPage);
  } catch (e: any) {
    console.error("Search error:", e);
    error = e.message || "Failed to search";
  }
}

const animeList = searchResults?.results || [];
const hasNextPage = searchResults?.hasNextPage || false;
---

<MainLayout
  title={query ? `Search: ${query} - ${seoConfig.simpleTitle}` : "Search Anime - " + seoConfig.simpleTitle}
  description={query ? `Search results for "${query}". Find anime series, movies, and OVAs matching your search.` : "Search our vast anime database. Find your favorite anime series by title, genre, or keyword."}
  keywords={query ? [...seoConfig.keywords, "search", query] : [...seoConfig.keywords, "search anime", "find anime", "anime database"]}
  noindex={true}
>
  <main class="min-h-screen bg-black px-4 pb-12 pt-32">
    <div class="mx-auto max-w-7xl">
      <!-- Search Header -->
      <div class="mb-8">
        <h1 class="text-4xl font-bold text-white md:text-5xl">
          {query ? `Search Results for "${query}"` : "Search Anime"}
        </h1>
        {query && animeList.length > 0 && (
          <p class="mt-2 text-neutral-400">
            Found {animeList.length} results
          </p>
        )}
      </div>

      <!-- Search Form -->
      <div class="mb-12">
        <form action="/search" method="GET" class="mx-auto max-w-2xl">
          <div class="relative">
            <div
              class="pointer-events-none absolute inset-y-0 left-2 flex items-center"
            >
              <svg
                class="h-5 w-5 text-neutral-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>
            <input
              type="text"
              name="q"
              value={query}
              placeholder="Search for anime..."
              class="w-full rounded-lg border border-neutral-700 bg-neutral-900 py-3 pr-4 text-white placeholder-neutral-500 transition-colors focus:border-white focus:outline-none focus:ring-2 focus:ring-white/20"
              style="padding-left: 2.2rem;"
              autofocus
              autocomplete="off"
            />
          </div>
        </form>
      </div>

      <!-- Results -->
      {
        error ? (
          <div class="flex min-h-[400px] items-center justify-center">
            <div class="text-center max-w-md">
              <svg
                class="mx-auto mb-4 h-16 w-16 text-neutral-600"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <h3 class="mb-2 text-xl font-semibold text-white">
                Unable to Search
              </h3>
              <p class="text-neutral-400 mb-4">
                The service is temporarily unavailable. This usually happens due to high traffic or server timeouts.
              </p>
              <button
                onclick="window.location.reload()"
                class="inline-flex items-center gap-2 rounded-lg bg-white px-6 py-3 text-sm font-semibold text-black transition-all hover:bg-neutral-200"
              >
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                </svg>
                Try Again
              </button>
            </div>
          </div>
        ) : !query.trim() ? (
          <div class="flex min-h-[400px] items-center justify-center">
            <div class="text-center">
              <svg
                class="mx-auto h-16 w-16 text-neutral-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
              <h3 class="mt-4 text-lg font-semibold text-white">
                Start Searching
              </h3>
              <p class="mt-2 text-sm text-neutral-400">
                Enter a search term to find anime
              </p>
            </div>
          </div>
        ) : animeList.length > 0 ? (
          <>
            <div class="grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
              {animeList.map((anime: any) => (
                <AnimeCard
                  id={anime.id}
                  title={anime.title}
                  image={anime.image}
                  type={anime.type}
                  sub={anime.subOrDub === "sub" || anime.subOrDub === "both" ? 1 : 0}
                  dub={anime.subOrDub === "dub" || anime.subOrDub === "both" ? 1 : 0}
                />
              ))}
            </div>

            <!-- Pagination -->
            {(currentPage > 1 || hasNextPage) && (
              <div class="mt-12 flex items-center justify-center gap-4">
                {currentPage > 1 && (
                  <a
                    href={`/search?q=${encodeURIComponent(query)}&page=${currentPage - 1}`}
                    class="flex items-center gap-2 rounded-lg border border-neutral-700 bg-neutral-800 px-5 py-2.5 text-sm font-semibold text-white transition-all hover:border-neutral-600 hover:bg-neutral-700"
                  >
                    <svg
                      class="h-4 w-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M15 19l-7-7 7-7"
                      />
                    </svg>
                    Previous
                  </a>
                )}

                <span class="text-sm text-neutral-400">Page {currentPage}</span>

                {hasNextPage && (
                  <a
                    href={`/search?q=${encodeURIComponent(query)}&page=${currentPage + 1}`}
                    class="flex items-center gap-2 rounded-lg bg-white px-5 py-2.5 text-sm font-semibold text-black transition-all hover:bg-neutral-200"
                  >
                    Next
                    <svg
                      class="h-4 w-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </a>
                )}
              </div>
            )}
          </>
        ) : (
          <div class="flex min-h-[400px] items-center justify-center">
            <div class="text-center">
              <svg
                class="mx-auto h-16 w-16 text-neutral-700"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                />
              </svg>
              <h3 class="mt-4 text-lg font-semibold text-white">
                No Results Found
              </h3>
              <p class="mt-2 text-sm text-neutral-400">
                Try searching with different keywords
              </p>
            </div>
          </div>
        )
      }
    </div>
  </main>
</Layout>
